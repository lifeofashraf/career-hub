generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id // Clerk user ID
  email     String   @unique
  name      String?
  avatarUrl String?

  resumes   Resume[]
  jobs      JobApplication[]
  footprint FootprintCheck?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Stripe Subscription
  stripeCustomerId       String?   @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId   String?   @unique @map(name: "stripe_subscription_id")
  stripePriceId          String?   @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd DateTime? @map(name: "stripe_current_period_end")
  
  plan    String @default("free") // free, pro, lifetime
  credits Int    @default(3)      // AI credits
}

model Resume {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title     String
  slug      String   @unique
  template  String   @default("minimal")
  isPublic  Boolean  @default(false)
  data      Json     // Full resume JSON (basics, work, education, skills, etc. - Native JSON)
  metadata  Json?    // Theme, layout, page size

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model JobApplication {
  id           String    @id @default(cuid())
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  company      String
  position     String
  url          String?
  status       String    @default("wishlist") // wishlist, applied, interviewing, offer, accepted, rejected
  notes        String?
  salary       String?
  contactName  String?
  contactEmail String?
  appliedAt    DateTime?
  order        Int       @default(0) // For ordering within columns

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([userId])
  @@index([userId, status])
}

model FootprintCheck {
  id             String    @id @default(cuid())
  userId         String    @unique
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  completedItems String[]  @default([])      // Array of completed checklist item IDs
  score          Int       @default(0)    // Calculated 0-100
  lastCheckedAt  DateTime?

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}
